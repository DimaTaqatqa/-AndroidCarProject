<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.carmenu.CarMenuFragment">

    <!-- RecyclerView for displaying car cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCarMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:padding="8dp" />

    <!-- SearchView for filtering cars -->
    <android.widget.SearchView
        android:id="@+id/searchViewCarMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewCarMenu"
        android:queryHint="Search cars"
        android:iconifiedByDefault="false" />

</androidx.constraintlayout.widget.ConstraintLayout>
